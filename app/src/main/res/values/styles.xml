<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="def_button_style">
        <item name="button_color">@android:color/holo_green_light</item>
        <item name="text_color">@color/colorW</item>
        <item name="text_size">14sp</item>
        <item name="circle_loading_width">1dp</item>
        <item name="circle_loading_color">@android:color/darker_gray</item>
        <item name="failed_button_color">@android:color/holo_red_light</item>
        <item name="login_text">登录</item>
        <item name="failed_text">失败请重试!</item>
    </style>

    <style name="def_card_item_style">
        <item name="cardColor">@color/colorW</item>
        <item name="cardStrockColor">@color/strackColor</item>
        <item name="textHighLightColor">@color/textHighLightColor</item>
        <item name="textNormalColor">@color/textNormalColor</item>
        <item name="triangleColor">@color/triangleColor</item>
        <item name="triangleFlagColor">@color/triangleFlagColor</item>
        <item name="dashLineColor">@color/dashLineColor</item>
        <item name="cardRoundSize">2dp</item>
        <item name="strockSize">2px</item>
    </style>

    <style name="def_scroll_delete_style">
        <item name="top_layer_color">@color/colorW</item>
        <item name="top_layer_icon">@mipmap/icon_scroll_delete_ready</item>
        <item name="top_layer_desc">Edison</item>
        <item name="top_layer_desc_color">#90000000</item>
        <item name="top_layer_desc_another_color">#666666</item>
        <item name="top_layer_desc_another_size" >12</item>
        <item name="top_layer_desc_margin" >10dp</item>
        <item name="top_layer_icon_margin_desc">12dp</item>
        <item name="top_layer_icon_margin_left">12dp</item>
        <item name="under_layer_color">@color/strackColor</item>
        <item name="under_layer_icon">@mipmap/icon_scroll_delete_action</item>
    </style>

    <style name="def_progress_style">
        <item name="outer_layer_solide_color">@color/colorW</item>
        <item name="outer_layer_stroke_color">#90F76E6B</item>
        <item name="outer_layer_stroke_width">2dp</item>
        <item name="midlle_layer_bg_color">@color/strackColor</item>
        <item name="midlle_layer_progress_color">#F76E6B</item>
        <item name="midlle_layer_progress_width">4dp</item>
        <item name="midlle_layer_small_circle_solide_color">@color/colorW</item>
        <item name="midlle_layer_small_circle_stroke_color">#F76E6B</item>
        <item name="midlle_layer_small_circle_size">9dp</item>
        <item name="midlle_layer_small_circle_stroke_width">4dp</item>
        <item name="shadow_layer_color">#90F76E6B</item>
        <item name="shadow_layer_inner_color">@color/colorW</item>
        <item name="inner_text_size">50sp</item>
        <item name="inner_text_color">#F76E6B</item>
    </style>
</resources>
